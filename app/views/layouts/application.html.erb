            <li><a href="#"> <span class="fa fa-envelope-o"></span> Contact</a></li>
            <li></li>
            <li><a href="/tester/shutdown"> <span class="glyphicon glyphicon-off"></span> Off </a></li>
          </ul>

        </div>
    </nav>


    <div class="container-fluid">
      <div class="row">
          <div class="col-md-2">

            <div class="list-group" style="text-align: center">
            <% Project.all.each do |project|  %>
            <%= link_to project_path(project), class: "list-group-item" do %>
                <h4 class="list-group-item-heading"> <%= project.name %></h4>
                <p class="list-group-item-text"></p>
                  <% end %>
              <% end %>
            </div>

            </div>
            <div class="col-md-10">
                <%= yield %>
            </div>
      </div>
    </div>
  </body>

