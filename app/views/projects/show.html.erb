
<div class="container fluid">
  <div class="col-md-4">

    <div class="jumbotron">

          <h2> Project: <%=@project.name%></h2>
          </br>
          </br>

          <p class="lead"> <%= @project.description%> </p>


            <%= link_to "#{}" do%>
            <button data-toggle="tooltip" title="Start to test for <%= @project.name%>!">

                Test  <span class="glyphicon glyphicon-play"></span>
            </button>
                    <% end %>

            <%= link_to "#{}" do%>
            <button data-toggle="tooltip" title="Edit pins.">

                  Edit <span class="glyphicon glyphicon-play"></span></span>
            </button>
            <% end %>
    </div>
    <button data-toggle="tooltip" title="Edit pins." type="button" class="btn btn-secondary">Edit</button>

  </div>

  <div class="col-md-8">


  <h1><b>Pinout for project:</b> <%=@project.name%></h1>
  <div>
  <table class="table table-dark .table-condensed">

      <tr class="info">
        <th>Pin dut:</th>
        <th>Pin dut name:</th>
        <th>Pin dut description:</th>
        <th>Pin setup:</th>
        <th>Pin setup name:</th>
        <th>Pin setup description:</th>

        <th></th>
        <th></th>
      </tr>



      <% @pinout.each do |pinout| %>

    <% if pinout.project_id == @project.id %>
        <tr>
          <td><%= pinout.pin_dut %></td>
          <td><%= pinout.pin_dut_name %></td>
          <td><%= pinout.pin_dut_description %></td>
          <td><%= pinout.pin_setup %></td>
          <td><%= pinout.pin_setup_name %></td>
          <td><%= pinout.pin_setup_description %></td>
      <% end %>
<% end %>
  </table>

  </div>
  <div class="">
    <%= will_paginate @pinout, renderer: BootstrapPagination::Rails %>
  </div>

    <p>
      <%= link_to"#{}" do%>
      <button data-toggle="tooltip" title="Edit pinout for <%= @project.name%> project!">

          <span class="fa fa fa-cogs">     </span>
      </button>
              <% end %>
    </p>

</div>
</div>
